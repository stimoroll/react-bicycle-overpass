{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    // "esModuleInterop": true,
    "esModuleInterop": false,
    "lib": [
      "dom",
      "es2018",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react",
    // "target": "es5",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "outDir": "out",
    "declaration": true,
    "declarationDir": "./typings"
  }
}
